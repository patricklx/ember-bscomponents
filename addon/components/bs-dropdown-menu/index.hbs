{{import BasicDropdown from 'ember-basic-dropdown/components/basic-dropdown'}}
{{import Item from './item'}}

<BasicDropdown as |dd|>
    {{yield (hash
            Trigger=(component (ensure-safe-component dd.Trigger) class="dropdown")
            Content=(component (ensure-safe-component dd.Content) class="dropdown-menu")
            Item=(component (ensure-safe-component Item))
    )}}
</BasicDropdown>
