<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close {{unless allowClose 'hide'}}" data-dismiss="modal"
					aria-hidden="true">&times;</button>
			<h4 class="modal-title">
              {{#if titleIconClasses}}
				        <i class={{titleIconClasses}}></i>
              {{/if}}
              {{{title}}}
			</h4>
		</div>
		<div class="modal-body">
        {{yield}}
		</div>
		<div class="modal-footer {{if fullSizeButtons 'modal-footer-full'}}">
          {{#each footerButtons as |btn|}}
            {{bs-button content=btn targetObjectBinding="view.targetObject"}}
          {{/each}}
          {{#each footerViews as |v|}}
            {{view v}}
          {{/each}}
		</div>
	</div>
</div>
