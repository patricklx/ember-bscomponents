{{import eq from 'ember-bscomponents/helpers/is-equal'}}

{{#each content as |tab|}}
  {{#if hasBlock}}
    {{yield (hash
              item-component=(component 'bs-pill' isActive=(eq tab selected) onItemSelected=(action 'onItemSelected' tab))
              item=tab
            )
    }}
  {{else}}
    {{#if contentPath}}
      {{bs-pill content=(get tab contentPath)
        isActive=(ember-bscomponents/is-equal tab selected)
        onItemSelected=(action 'onItemSelected' tab)}}
    {{else}}
      {{bs-pill content=tab isActive=(eq tab selected) onItemSelected=(action 'onItemSelected' tab)}}
    {{/if}}
  {{/if}}
{{/each}}
