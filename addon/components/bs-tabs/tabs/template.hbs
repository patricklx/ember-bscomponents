{{import BsPill from '~/components/bs-pill'}}
{{import is-equal from '~/helpers/is-equal'}}
{{import class-bind from '~/helpers/class-bind'}}

<ul class='{{class-bind "justified:nav-justified" this.args}} nav nav-pills' ...attributes>
{{#each @content as |tab|}}
  {{#if (has-block)}}
    {{yield (hash
              item-component=(component BsPill isActive=(is-equal tab @selected) onItemSelected=@onItemSelected)
              item=tab
            )
    }}
  {{else}}
    {{#if @contentPath}}
      <BsPill @content={{get tab @contentPath}}
              @isActive={{is-equal tab @selected}}
              @onItemSelected={{fn @onItemSelected tab}}
      />
    {{else}}
      <BsPill @content={{tab}}
              @isActive={{is-equal tab @selected}}
              @onItemSelected={{fn @onItemSelected tab}}
      />
    {{/if}}
  {{/if}}
{{/each}}
</ul>
