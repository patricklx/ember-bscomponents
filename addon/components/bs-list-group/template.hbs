{{import Item from './item'}}
{{import is-equal from '~/helpers/is-equal'}}

{{#with (component (-element this.tag)) as |Elem|}}
  <Elem class="list-group">
    {{#each this.items as |item|}}
      {{#if hasBlock}}
        {{yield (hash
          item-component=(component Item content=item withLinks=withLinks isActive=(is-equal item @selected) onItemSelected=(fn this.onItemSelected item))
          content=item
        )}}
      {{else}}
        {{component itemComponent content=item withLinks=withLinks isActive=(is-equal item @selected) onItemSelected=(fn this.onItemSelected item)}}
      {{/if}}
    {{/each}}
  </Elem>
{{/with}}
