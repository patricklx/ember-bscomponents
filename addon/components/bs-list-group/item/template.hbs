{{import Heading from './heading'}}
{{import Text from './text'}}

{{#with (-element this.tag) as |Elem|}}
  <Elem onclick="return false;" class="list-group-item {{if @isActive 'active'}} {{if @disabled 'disabled'}}" href={{this.href}} {{on 'click' @onItemSelected}}>
    {{#if hasBlock}}
      {{yield (hash
        heading=(component Heading)
        text=(component Text)
      )}}
    {{else}}
      {{content}}
    {{/if}}
  </Elem>
{{/with}}
