{{import Item from './item'}}
{{import is-equal from '~/helpers/is-equal'}}
{{import element from 'ember-element-helper/helpers/element'}}

{{#with (element this.tag) as |Elem|}}
  <Elem class="list-group">
    {{#each this.items key=@key as |item|}}
      {{#if (has-block)}}
        {{yield (hash
          item-component=(component (ensure-safe-component Item) content=item withLinks=@withLinks isActive=(is-equal item @selected) onItemSelected=(fn this.onItemSelected item))
          content=item
        )}}
      {{else}}
        {{component (ensure-safe-component itemComponent) content=item withLinks=@withLinks isActive=(is-equal item @selected) onItemSelected=(fn this.onItemSelected item)}}
      {{/if}}
    {{/each}}
  </Elem>
{{/with}}
