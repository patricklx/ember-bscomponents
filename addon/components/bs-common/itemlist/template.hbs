{{import eq from '~/is-equal'}}

{{#each @content as |item|}}
  {{#if hasBlock}}
    {{yield (hash
      item-component=(component @itemComponent isActive=(eq item @selected) onItemSelected=(fn @onItemSelected item))
      content=item)}}
  {{else}}
    {{component @itemComponent content=item isActive=(eq item @selected) onItemSelected=(fn @onItemSelected item)}}
  {{/if}}
{{/each}}
