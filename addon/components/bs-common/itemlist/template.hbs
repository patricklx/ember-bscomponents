{{import eq from 'ember-bscomponents/helpers/is-equal'}}

{{#each content as |item|}}
  {{#if hasBlock}}
    {{yield (hash
      item-component=(component itemComponent isActive=(eq item selected) onItemSelected=(action 'onItemSelected' item))
      content=item)}}
  {{else}}
    {{component itemComponent content=item isActive=(eq item selected) onItemSelected=(action 'onItemSelected' item)}}
  {{/if}}
{{/each}}
