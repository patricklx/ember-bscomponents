{{#each content as |item|}}
  {{#if hasBlock}}
    {{yield (hash
      item-component=(component itemComponent isActive=(is-equal item selected) onItemSelected=(action 'onItemSelected' item))
      content=item)}}
  {{else}}
    {{component itemComponent content=item isActive=(is-equal item selected) onItemSelected=(action 'onItemSelected' item)}}
  {{/if}}
{{/each}}
