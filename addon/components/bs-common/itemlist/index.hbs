{{import eq from '~/helpers/is-equal'}}

{{#each @content as |item|}}
  {{#if (has-block)}}
    {{yield (hash
      item-component=(component (ensure-safe-component @itemComponent) isActive=(eq item @selected) onItemSelected=(fn @onItemSelected item))
      content=item)}}
  {{else}}
    {{component (ensure-safe-component @itemComponent) content=item isActive=(eq item @selected) onItemSelected=(fn @onItemSelected item)}}
  {{/if}}
{{/each}}
